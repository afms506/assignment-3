<%- include("./partials/header") %>

<div class="container page-container">

    <h1 class="mb-4">Your Events</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="text-muted">Manage all your upcoming events in one place.</p>

        <a href="/events/add" class="btn btn-primary">+ Create New Event</a>
    </div>

    <div class="row g-4">

        <% if (events.length === 0) { %>
            <p class="text-muted">No events created yet.</p>
        <% } %>

        <% events.forEach(event => { %>
            <div class="col-md-4">
                <div class="card event-card p-3 shadow-sm">

                    <h4 class="mb-1"><%= event.name %></h4>

                    <p class="text-muted mb-1">
                        <%= event.location %> Â· <%= new Date(event.date).toLocaleDateString() %>
                    </p>

                    <!-- Description -->
                    <p class="small">
                        <%= event.description ? event.description.substring(0, 100) : "No description." %>
                    </p>

                    <!-- RSVP Required -->
                    <p class="small mb-2">
                        <strong>RSVP Required:</strong>
                        <%= event.rsvpRequired ? "Yes" : "No" %>
                    </p>

                    <!-- Capacity -->
                    <div class="capacity-bar mb-3">
                        <div class="capacity-fill" 
                             style="width: <%= event.capacityUsed || 0 %>%;"></div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex justify-content-between">
                        <a href="/events/<%= event._id %>/guests" class="btn btn-primary btn-sm">
                            View Guests
                        </a>

                        <a href="/events/edit/<%= event._id %>" class="btn btn-warning btn-sm">
                            Edit
                        </a>

                        <a href="/events/delete/<%= event._id %>" 
                           class="btn btn-danger btn-sm delete-confirm">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>

    </div>

</div>

<script src="/js/deleteConfirm.js"></script>

<%- include("./partials/footer") %>
